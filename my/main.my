    page_title =  remove_extension( page_title );
    # TODO:  Table of Contents
    # FIXME:  Browser, when clicking "Table of Contents", that text seems to wiggle.
    #         (Probably a template issue, possibly unfixable)
    toc =  "<br>TO DO";
    # TODO:  RSS
