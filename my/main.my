fun remove_character( list: List( String ) ): String
    =
{
  character =  list::nth( list, 0 );
  string =  list::nth( list, 1 );

  my tmp =  REF "";
  n =  string::length( string );
  for ( i = 0; i < n; ++i ) {
    pos =  explode string;
    pos =  list::nth( pos, i );
    pos =  char::to_string( pos );
    if ( pos != character )
      tmp :=  *tmp + pos;
    fi;
  };
  *tmp;
};
